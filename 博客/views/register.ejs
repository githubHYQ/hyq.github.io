<%- include('./components/header') %> 

<!-- 页面主体 -->

    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-sm-offset-3">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <!-- Basic panel example -->
                        <form action="/register" method="POST" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="username">请输入用户名</label>
                                <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
                            </div>
                            <div class="form-group">
                                <label for="password">请输入密码</label>
                                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                            </div>
                            <div class="form-group">
                                <label for="avatar">请上传头像</label>
                                <input type="file" id="avatar" name="avatar">
                            </div>
                            <div class="form-group">
                                <label for="gender">请选择性别</label>
                                <select class="form-control" id="gender" name="gender" required>
                                    <option value="m">男</option>
                                    <option value="f">女</option>
                                    <option value="s">保密</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="profile">请输入个人简介</label>
                                <textarea type="text" rows="3" class="form-control" id="profile" name="profile"
                                    placeholder="profile" required></textarea>
                            </div>

                            <button type="submit" class="btn btn-info form-control">注册</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>

<%- include('./components/footer') %> 