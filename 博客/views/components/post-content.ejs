        <div class="row">
            <!-- 左边头像区域 -->
            <div class="col-sm-2 hidden-xs profile">
                <a href="/posts?author=<%= post.author._id %>" class="pull-right" data-toggle="popover" title="<%= post.author.username %>" data-content="<%= post.author.profile %>"
                    data-placement="bottom">
                    <img src="/uploads/<%= post.author.avatar %>" class="img-responsive img-circle">
                </a>
            </div>
            <!-- 右边文章区域 -->
            <div class="col-xs-12 col-sm-8">
                <div class="panel panel-default">
                    <div class="panel-heading"><a href="/posts/<%= post._id %>"><%= post.title %></a></div>
                    <div class="panel-body text-justify"><%= post.content %></div>
                    <!-- 面板底部 -->
                    <div class="panel-footer clearfix">
                        <div class="pull-left">
                            <small class="name"><a href="">Nick</a></small>
                            <small class=""><%= post.createdTime.toLocaleString() %></small>
                        </div>
                        <div class="pull-right dropup">
                            <small>浏览(<%= post.pv %>)</small>
                            <small>留言(<%= post.comments %>)</small>
                            <% if (user) { %>
                                <% if (post.author._id == user._id) { %>
                                    <small class="glyphicon glyphicon-triangle-bottom dropdown-toggle" data-toggle="dropdown"></small>
                                    <ul class="dropdown-menu dropdown-menu-top">
                                        <li><a href="/posts/<%= post._id %>/edit">编辑</a></li>
                                        <li><a href="/posts/<%= post._id %>/remove">删除</a></li>
                                    </ul>
                                <% } %>
                            <% } %>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>